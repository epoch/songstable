source 'https://rubygems.org'

gem 'rails', '3.2.13'

gem 'pg'
gem 'jquery-rails'
gem 'carrierwave'
gem "fog", "~> 1.3.1" # require for carrierwave s3
gem 'pg_search'
gem 'simple_form'
gem 'cocoon' #, :git => 'https://github.com/nathanvda/cocoon'
gem 'unicorn'
gem 'slim'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
	gem 'zurb-foundation', '~> 4.0.4'  
end

group :development, :test do
  gem 'rspec-rails', '~> 2.0'
  gem 'guard-rspec'
  gem 'capybara'
  gem 'factory_girl_rails'
  gem 'shoulda-matchers'  
end

gem 'pry-rails', :group => :development # replace irb with pry for rails console
